@using System.IdentityModel.Tokens.Jwt

<div class="acc-section">
    <div class="container">
        <div class="acc-wrapper">
            <partial name="_AccountMenu" />
            <div class="acc-content">
                <div class="content-box">
                    <header class="box-header">
                        <h2>Reviews</h2>
                    </header>

                    <div class="modal-container">
                        <div class="modal">
                            <div class="modal-content">
                                <header class="modal-header">
                                    <h2>Write a review</h2>
                                    <i class="bx bx-x"></i>
                                </header>
                                <form>
                                    <div class="modal-field rating">
                                        <p>Are you satisfied enough?</p>
                                        <div class="rate-this">
                                            <input type="radio" name="rating" id="star5">
                                            <label for="star5"><img src="~/resources/icons/empty-star.png"></label>

                                            <input type="radio" name="rating" id="star4">
                                            <label for="star4"><img src="~/resources/icons/empty-star.png"></label>

                                            <input type="radio" name="rating" id="star3">
                                            <label for="star3"><img src="~/resources/icons/empty-star.png"></label>

                                            <input type="radio" name="rating" id="star2">
                                            <label for="star2"><img src="~/resources/icons/empty-star.png"></label>

                                            <input type="radio" name="rating" id="star1">
                                            <label for="star1"><img src="~/resources/icons/empty-star.png"></label>
                                        </div>
                                    </div>
                                    <div class="modal-field">
                                        <label>Title</label>
                                        <input type="text" required />
                                    </div>
                                    <div class="modal-field">
                                        <label>Review</label>
                                        <textarea type="text"></textarea>
                                    </div>
                                    <button class="button black">Leave a review</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="reviews-list">
                        <div class="reviews-list-header">
                            Write review <span>(1)</span>
                        </div>
                        <div class="reviews-list-line">
                            <div class="left-part">
                                <div class="line-image">
                                    <a asp-controller="Catalog" asp-action="Product" asp-route-id="3">
                                        <img src="/resources/productsImages/asus-laptop-g513-r7-16gb-1tb-3070-no-os,117928751377_3.jpg" alt="Image">
                                    </a>
                                </div>
                                <div class="line-content">
                                    <a asp-controller="Catalog" asp-action="Product" asp-route-id="3">
                                        ASUS ROG Strix G15
                                    </a>
                                    <a href="#">
                                        Purchased 5 months ago
                                    </a>
                                </div>
                            </div>
                            <div class="right-part">
                                <button class="button black outlined">Write review</button>
                            </div>
                        </div>
                    </div>

                    <div class="reviews-list">
                        <div class="reviews-list-header">
                            Edit review <span>(1)</span>
                        </div>
                        <div class="reviews-list-line">
                            <div class="left-part">
                                <div class="line-image">
                                    <a asp-controller="Catalog" asp-action="Product" asp-route-id="3">
                                        <img src="/resources/productsImages/asus-laptop-g513-r7-16gb-1tb-3070-no-os,117928751377_3.jpg" alt="Image">
                                    </a>
                                </div>
                                <div class="line-content">
                                    <a asp-controller="Catalog" asp-action="Product" asp-route-id="3">
                                        ASUS ROG Strix G15
                                    </a>
                                    <a href="#">
                                        Left 3 months ago
                                    </a>
                                </div>
                            </div>
                            <div class="right-part">
                                <button class="button black outlined">Write review</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/scripts/account.min.js" asp-append-version="true"></script>
}