@using System.IdentityModel.Tokens.Jwt

<div class="acc-section">
    <div class="container">
        <div class="acc-wrapper">
            <div class="acc-menu">
                <header>
                    <h3>
                        @User.Claims.FirstOrDefault(c => c.Type == JwtRegisteredClaimNames.GivenName)?.Value
                        @User.Claims.FirstOrDefault(c => c.Type == JwtRegisteredClaimNames.FamilyName)?.Value <br />
                        <span>Developer</span>
                    </h3>
                </header>
                <ul>
                    <li>
                        <a asp-controller="Account" asp-action="Index">
                            <i class='bx bx-id-card'></i>
                            Account
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Orders">
                            <i class='bx bx-layer'></i>
                            Orders
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Reviews">
                            <i class='bx bx-message-square-dots'></i>
                            Reviews
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Wishlist">
                            <i class='bx bx-heart'></i>
                            Wishlist
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Settings">
                            <i class='bx bx-cog'></i>
                            Settings & Privacy
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Auth" asp-action="Logout">
                            <i class='bx bx-log-out'></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
            <div class="acc-content">
                <div class="content-box">
                    <header class="box-header">
                        <h3>Reviews</h3>
                    </header>

                    <div class="reviews-list">
                        <div class="reviews-list-line">
                            <div class="left-part">
                                <div class="line-image">
                                    <a asp-controller="Catalog" asp-action="Product" asp-route-id="3">
                                        <img src="/resources/productsImages/asus-laptop-g513-r7-16gb-1tb-3070-no-os,117928751377_3.jpg" alt="Image">
                                    </a>
                                </div>
                                <div class="line-content">
                                    <a asp-controller="Catalog" asp-action="Product" asp-route-id="3">
                                        ASUS ROG Strix G15
                                    </a>
                                    <a href="#">
                                        Purchased 5 months ago
                                    </a>
                                </div>
                            </div>
                            <div class="right-part">
                                <button class="button black outlined">Write review</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/scripts/account.min.js" asp-append-version="true"></script>
}