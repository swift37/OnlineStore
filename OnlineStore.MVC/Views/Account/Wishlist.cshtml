                            </div>
                        </div>
                        <div class="products-list-summary">
                            <div class="products-count">
                                3 products
                            </div>
                            <div class="products-total">
                                <div class="total-lines">
                                    <div class="total-line">
                                        <span>Subtotal:</span>
                                        <span>$1500.00</span>
                                    </div>
                                    <div class="total-line">
                                        <span>Discount:</span>
                                        <span>-$100.00</span>
                                    </div>
                                </div>
                                <div class="total-sum">
                                    <span>Total:</span>
                                    <span>$1400.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/scripts/account.min.js" asp-append-version="true"></script>
