@section styles {
    <link rel="stylesheet" href="~/css/toast-notification.min.css" asp-append-version="true" />
}

<div class="toast">
    <div class="toast-content">
        <i class='bx bx-check'></i>

        <div class="message">
            <span class="text headline">Success</span>
            <span class="text details">Your changes has been saved</span>
        </div>
    </div>
    <i class='bx bx-x t-close'></i>
    <div class="progress"></div>
</div>

