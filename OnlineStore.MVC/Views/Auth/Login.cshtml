@model LoginViewModel;

@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-wrapper">
    <div class="auth-form">
        <form asp-controller="Auth" asp-action="Login">
            <h2>Sign In</h2>

            <div class="auth-field">
                <input asp-for="UsernameOrEmail" type="email" placeholder="Login or email" required />
                <i class='bx bx-user auth-icon'></i>
            </div>
            <span asp-validation-for="UsernameOrEmail" class="failure"></span>
            <div class="auth-field">
                <input asp-for="Password" type="password" placeholder="Password" required />
                <i class='bx bx-lock-alt auth-icon'></i>
                <i class='bx bx-hide pswd-hide'></i>
            </div>
            <span asp-validation-for="Password" class="failure"></span>
            <div class="options-field">
                <a asp-controller="Auth" asp-action="ResetPasswordRequest" class="forgot_pswd">Forgot password?</a>
            </div>
            <input asp-for="RedirectUrl" type="hidden" />
            <button class="button black sign-in">Sign In</button>
        </form>
        <div class="auth-switch">
            Don't have an account yet? 
            <a asp-controller="Auth" asp-action="Register" asp-route-redirectUrl="@Model.RedirectUrl">
                Sign Up
            </a>
        </div>
    </div>
</div>