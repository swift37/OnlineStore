@model OnlineStore.Models.ViewModels.ProductsCollectionViewModel

@{
    ViewData["Title"] = $"{Model.Category?.Name} - {Model.SubCategory?.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section">
    <div class="container">
        <div class="products-page-container">
            <div class="ui breadcrumb">
                <a class="section" asp-controller="Home" asp-action="Index">Home</a>
                <i class="right angle icon divider"></i>
                <a class="section" asp-controller="Home" asp-action="Catalog">Products</a>
                <i class="right angle icon divider"></i>
                <a class="section">@Model.Category?.Name</a>
                <i class="right angle icon divider"></i>
                <div class="active section">@Model.SubCategory?.Name</div>
            </div>
            <h1>@Model.SubCategory?.Name</h1>

            <div class="ui three column grid">
                @foreach (var product in Model.Products)
                {
                    <div class="column special-card-column">
                        <div class="ui fluid card">
                            <div class="blurring dimmable image">
                                <div class="ui dimmer">
                                    <div class="content">
                                        <div class="center">
                                            <a class="product-details-link" asp-controller="Product" asp-action="ViewProduct" asp-route-id="1">
                                                <div class="ui inverted button">
                                                    Details
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <img src="\resources\productsImages\asus-laptop-g513-r7-16gb-1tb-3070-no-os,117928751377_3.jpg">
                            </div>
                            <div class="content">
                                <div class="header">Product</div>
                                <div class="meta">
                                    <a asp-route="products" asp-route-subcategoryid="@product.SubCategory?.Id">
                                        @(product.SubCategory?.Name ?? product.Category?.Name)
                                    </a>
                                </div>
                            </div>
                            <div class="extra content product-card-footer">
                                <span class="right floated">
                                    <a class="buy-ref" data-itemid="@product.Id">Add to cart</a>
                                </span>
                                <span>
                                    $@product.UnitPrice
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>

