                            <div class="cart-total">
                                <table>
                                    <tbody>
                                        <tr>
                                            <th>Subtotal</th>
                                            <td>$@Model.SubtotalPrice</td>
                                        </tr>
                                        <tr>
                                            <th>Discount</th>
                                            <td>$@Model.TotalDiscount</td>
                                        </tr>
                                        <tr>
                                            <th>TOTAL</th>
                                            <td><strong>$@Model.TotalPrice</strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <a asp-controller="Order" asp-action="PersonalInfo" asp-route-cartId="1" class="secondary-button">
                                    Add available to cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="subscribe-section">
    <div class="content-container">
        <div class="subscribe-header">
            Newsletter
        </div>
        <div class="paragraph-light subscribe-paragraph">
            Sign up to receive updates from our shop, including new tea selections and upcoming events.
        </div>
        <div class="ui action input">
            <input type="text" value="" placeholder="Enter your email">
            <div class="ui black button">Subscribe</div>
        </div>
    </div>
</section>