@    using Microsoft.AspNetCore.Identity
@    using OnlineStore.Domain

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="ui dropdown item">
        <i class="user icon"></i>
        <div class="menu">
            <a id="manage" class="item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            <form id="logoutForm" class="form-inline item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="border-0">Logout</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="ui dropdown item">
        <i class="user icon"></i>
        <div class="menu">
            <a class="item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="item" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
}